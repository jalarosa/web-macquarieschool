<!DOCTYPE html>
<html>
{{> courses_head}}
<body>
{{> languaje}}
{{> header}}
<section id="team" class="pb-5">
  <div class="container">
    <div class="row">
      <!-- Kinder -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center kinder-img">
                  <p><img class="img-fluid" src="images/p3_big7.jpg" alt=""></p>
                  <h4 class="card-title">{{data.KINDER_TITLE.value}}</h4>
                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <div class="card-title">
                    <h4>{{data.KINDER_TITLE.value}}</h4>
                    <p>{{data.KINDER_DESCRIPTION.value}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Kinder -->
      <!-- MINI & JUNIOR SCHOOL -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center mini-junior-school-img">
                  <p><img class="img-fluid" src="images/p3_pic2.jpg" alt=""></p>
                  <h4 class="card-title">{{data.MINI_JUNIORS_SCHOOL_TITLE.value}}</h4>
                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <h4 class="card-title">{{data.MINI_JUNIORS_SCHOOL_TITLE.value}}</h4>
                  <p class="card-text">{{data.MINI_JUNIORS_SCHOOL_DESCRIPTION.value}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- MINI & JUNIOR SCHOOL -->

      <!-- ADULTS -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center mini-junior-school-img">
                  <p><img class="img-fluid" src="images/adults_pic1.jpg" alt=""></p>
                  <h4 class="card-title">{{data.ADULTS_TITLE.value}}</h4>
                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <h4 class="card-title">{{data.ADULTS_TITLE.value}}</h4>
                  <p class="card-text">{{data.ADULTS_DESCRIPTION.value}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- ADULTS -->
    </div>
    <div class="row">

      <!-- ESP -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center mini-junior-school-img">
                  <p><img class="img-fluid" src="images/esp_pic.jpg" alt=""></p>
                  <div class="card-title">
                    <h4>{{data.ESP_TITLE.value}}</h4>
                    <p>{{data.ESP_SUBTITLE.value}}</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <h4 class="card-title">{{data.ESP_TITLE.value}}</h4>
                  <p class="card-text">{{data.ESP_DESCRIPTION.value}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- ESP -->
      <!-- COACHING -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center mini-junior-school-img">
                  <p><img class="img-fluid" src="images/p3_pic11.jpg" alt=""></p>
                  <h4 class="card-title">{{data.COACHING_TITLE.value}}</h4>
                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <h4 class="card-title">{{data.COACHING_TITLE.value}}</h4>
                  <p class="card-text">{{data.COACHING_DESCRIPTION.value}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- COACHING -->
      <!-- EXAMS -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center international-exams-img">
                  <p><img class="img-fluid" src="images/international_exams.jpg" alt=""></p>
                  <div class="card-title">
                    <h4 class="card-title">{{data.EXAMS_TITLE.value}}</h4>
                  </div>
                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <div class="card-title">
                    <h4>{{data.EXAMS_TITLE.value}}</h4>
                    <p>{{data.EXAMS_DESCRIPTION.value}}</p>
                  </div>
                  <button type="button"
                          class="btn btn-info btn-lg"
                          data-toggle="modal"
                          data-target="#examsModal"
                  >{{data.EXAMS_BUTTON_READMORE.value}}
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- EXAMS -->
    </div>
  </div>
</section>
{{> exams}}
