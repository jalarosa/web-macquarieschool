      <!-- EXAMS -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center international-exams-img">
                  <p><img class="img-fluid" src="images/international_exams.jpg" alt=""></p>
