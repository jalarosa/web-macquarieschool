                    <h4>[[KINDER_TITLE]]</h4>
                    <p>[[KINDER_DESCRIPTION]]</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Kinder -->
      <!-- MINI & JUNIOR SCHOOL -->
      <div class="col-xs-12 col-sm-6 col-md-4">
