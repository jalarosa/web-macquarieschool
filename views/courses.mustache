                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <h4 class="card-title">[[ADULTS_TITLE]]</h4>
                  <p class="card-text">[[ADULTS_DESCRIPTION]]</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- ADULTS -->
    </div>
    <div class="row">

      <!-- ESP -->
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="image-flip">
          <div class="mainflip">
            <div class="frontside">
              <div class="card">
                <div class="card-body text-center mini-junior-school-img">
                  <p><img class="img-fluid" src="images/esp_pic.jpg" alt=""></p>
                  <div class="card-title">
                    <h4>[[ESP_TITLE]]</h4>
                    <p>[[ESP_SUBTITLE]]</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="backside">
              <div class="card">
                <div class="card-body text-center mt-4">
                  <h4 class="card-title">[[ESP_TITLE]]</h4>
                  <p class="card-text">[[ESP_DESCRIPTION]]</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- ESP -->
      <!-- COACHING -->
      <div class="col-xs-12 col-sm-6 col-md-4">
